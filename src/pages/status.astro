---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Tech Stack Status | Prathmesh Bhardwaj">
  <!-- Header -->
  <header class="technical-border corner-marks p-6 bg-white mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">LIVE_TECH_STACK_STATUS</h1>
    <div class="text-sm text-gray-600 font-mono info-dense">
      <div>MONITORING_MODE: Real-time</div>
      <div>UPDATE_FREQUENCY: Continuous learning</div>
      <div>LAST_SYNC: 2024.01.22 14:30:00 UTC</div>
    </div>
  </header>

  <!-- System Overview -->
  <section class="mb-8">
    <div class="technical-border corner-marks p-6 bg-white">
      <h2 class="text-xl font-bold text-gray-900 mb-6">SYSTEM_OVERVIEW</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Overall Health -->
        <div class="technical-border p-4 bg-green-50 system-monitor">
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-bold text-gray-900">SYSTEM_HEALTH</h3>
            <span class="w-3 h-3 bg-green-500 rounded-full status-active"></span>
          </div>
          <div class="text-2xl font-bold text-green-600 mb-1">OPERATIONAL</div>
          <div class="text-xs text-gray-600 font-mono">All systems functioning normally</div>
        </div>

        <!-- Active Projects -->
        <div class="technical-border p-4 bg-blue-50 system-monitor">
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-bold text-gray-900">LEARNING_PROJECTS</h3>
            <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 technical-border status-flicker">4</span>
          </div>
          <div class="text-2xl font-bold text-blue-600 mb-1">BUILDING</div>
          <div class="text-xs text-gray-600 font-mono">Portfolio & skill development</div>
        </div>

        <!-- Performance Score -->
        <div class="technical-border p-4 bg-purple-50 system-monitor">
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-bold text-gray-900">PERFORMANCE</h3>
            <span class="text-xs bg-purple-100 text-purple-800 px-2 py-1 technical-border">A+</span>
          </div>
          <div class="text-2xl font-bold text-purple-600 mb-1">OPTIMAL</div>
          <div class="text-xs text-gray-600 font-mono">All metrics within targets</div>
        </div>
      </div>
    </div>
  </section>

  <!-- System Info Display (neofetch style) -->
  <section class="mb-8">
    <div class="technical-border corner-marks p-4 bg-black text-green-400 font-mono text-sm">
      <div class="mb-4 text-blue-400">SYSTEM INFORMATION v2.1.0</div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="space-y-1">
          <div><span class="text-yellow-400">OS:</span> Student Development Environment</div>
          <div><span class="text-yellow-400">Kernel:</span> Prathmesh-Bhardwaj-1.0.0</div>
          <div><span class="text-yellow-400">Uptime:</span> Learning mode active</div>
          <div><span class="text-yellow-400">Packages:</span> 156 (npm), 23 (flutter)</div>
          <div><span class="text-yellow-400">Shell:</span> zsh 5.8</div>
          <div><span class="text-yellow-400">Resolution:</span> Backend/Fullstack capable</div>
        </div>
        <div class="space-y-1">
          <div><span class="text-yellow-400">DE:</span> Backend Engineering</div>
          <div><span class="text-yellow-400">WM:</span> Express.js Manager</div>
          <div><span class="text-yellow-400">Theme:</span> Clean Architecture</div>
          <div><span class="text-yellow-400">Terminal:</span> Node.js Terminal</div>
          <div><span class="text-yellow-400">CPU:</span> Multi-core Problem Solver</div>
          <div><span class="text-yellow-400">Memory:</span> Unlimited Learning Capacity</div>
        </div>
      </div>
      <div class="mt-4 text-center">
        <div class="inline-block">
          <span class="bg-yellow-500 text-black px-2">JavaScript</span>
          <span class="bg-blue-500 text-black px-2">Flutter</span>
          <span class="bg-green-500 text-black px-2">Express.js</span>
          <span class="bg-purple-500 text-black px-2">Node.js</span>
          <span class="bg-red-500 text-black px-2">MongoDB</span>
          <span class="bg-pink-500 text-black px-2">REST APIs</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Technology Mastery Levels -->
  <section class="mb-8">
    <div class="technical-border corner-marks p-6 bg-white">
      <h2 class="text-xl font-bold text-gray-900 mb-6">TECHNOLOGY_MASTERY_MATRIX</h2>
      
      <div class="space-y-6">
        <!-- JavaScript Programming -->
        <div class="technical-border p-4 bg-gray-50">
          <div class="flex justify-between items-center mb-3">
            <div>
              <h3 class="font-bold text-gray-900">JavaScript (Node.js)</h3>
              <div class="text-xs text-gray-600 font-mono">Primary backend language</div>
            </div>
            <div class="text-right">
              <div class="text-lg font-bold text-yellow-600">85%</div>
              <div class="text-xs text-gray-500">PROFICIENT</div>
            </div>
          </div>
          
          <div class="progress-bar h-4 technical-border mb-3" style="--progress: 85%;">
            <div class="h-full bg-yellow-500 transition-all duration-1000 ease-out" style="width: 85%;"></div>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-xs font-mono">
            <div class="technical-border p-2 bg-white">
              <div class="text-gray-500">EXPRESS.JS</div>
              <div class="font-bold text-green-600">88%</div>
            </div>
            <div class="technical-border p-2 bg-white">
              <div class="text-gray-500">REST APIs</div>
              <div class="font-bold text-green-600">82%</div>
            </div>
            <div class="technical-border p-2 bg-white">
              <div class="text-gray-500">ASYNC/AWAIT</div>
              <div class="font-bold text-green-600">85%</div>
            </div>
            <div class="technical-border p-2 bg-white">
              <div class="text-gray-500">NPM</div>
              <div class="font-bold text-yellow-600">80%</div>
            </div>
          </div>
        </div>

        <!-- Flutter Development -->
        <div class="technical-border p-4 bg-gray-50">
          <div class="flex justify-between items-center mb-3">
            <div>
              <h3 class="font-bold text-gray-900">Flutter Development</h3>
              <div class="text-xs text-gray-600 font-mono">Mobile & cross-platform</div>
            </div>
            <div class="text-right">
              <div class="text-lg font-bold text-blue-600">78%</div>
              <div class="text-xs text-gray-500">INTERMEDIATE</div>
            </div>
          </div>
          
          <div class="progress-bar h-4 technical-border mb-3" style="--progress: 78%;">
            <div class="h-full bg-blue-500 transition-all duration-1000 ease-out" style="width: 78%;"></div>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-xs font-mono">
            <div class="technical-border p-2 bg-white">
              <div class="text-gray-500">DART</div>
              <div class="font-bold text-green-600">80%</div>
            </div>
            <div class="technical-border p-2 bg-white">
              <div class="text-gray-500">UI/UX</div>
              <div class="font-bold text-yellow-600">75%</div>
            </div>
            <div class="technical-border p-2 bg-white">
              <div class="text-gray-500">STATE MGMT</div>
              <div class="font-bold text-yellow-600">72%</div>
            </div>
            <div class="technical-border p-2 bg-white">
              <div class="text-gray-500">WIDGETS</div>
              <div class="font-bold text-green-600">85%</div>
            </div>
          </div>
        </div>

        <!-- Backend Systems -->
        <div class="technical-border p-4 bg-gray-50">
          <div class="flex justify-between items-center mb-3">
            <div>
              <h3 class="font-bold text-gray-900">Backend Systems</h3>
              <div class="text-xs text-gray-600 font-mono">System design & architecture</div>
            </div>
            <div class="text-right">
              <div class="text-lg font-bold text-green-600">82%</div>
              <div class="text-xs text-gray-500">PROFICIENT</div>
            </div>
          </div>
          
          <div class="progress-bar h-4 technical-border mb-3" style="--progress: 82%;">
            <div class="h-full bg-green-500 transition-all duration-1000 ease-out" style="width: 82%;"></div>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-xs font-mono">
            <div class="technical-border p-2 bg-white">
              <div class="text-gray-500">NOTIFICATIONS</div>
              <div class="font-bold text-green-600">90%</div>
            </div>
            <div class="technical-border p-2 bg-white">
              <div class="text-gray-500">DATABASE</div>
              <div class="font-bold text-yellow-600">75%</div>
            </div>
            <div class="technical-border p-2 bg-white">
              <div class="text-gray-500">API DESIGN</div>
              <div class="font-bold text-green-600">85%</div>
            </div>
            <div class="technical-border p-2 bg-white">
              <div class="text-gray-500">INTEGRATION</div>
              <div class="font-bold text-yellow-600">78%</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Real-time Metrics -->
  <section class="mb-8">
    <div class="technical-border corner-marks p-6 bg-white">
      <h2 class="text-xl font-bold text-gray-900 mb-6">REAL_TIME_METRICS</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Response Time -->
        <div class="technical-border p-4 bg-gray-50 system-monitor">
          <div class="text-xs text-gray-500 mb-1">AVG_RESPONSE_TIME</div>
          <div class="text-2xl font-bold text-green-600 mb-1">12ms</div>
          <div class="text-xs text-gray-600 font-mono mb-2">Target: &lt;50ms</div>
          <!-- Mini line graph -->
          <svg width="100%" height="30" class="border-t border-gray-300">
            <polyline 
              fill="none" 
              stroke="#10b981" 
              stroke-width="2" 
              points="0,25 10,20 20,15 30,18 40,12 50,10 60,14 70,8 80,12 90,10 100,8"
            />
          </svg>
        </div>

        <!-- Throughput -->
        <div class="technical-border p-4 bg-gray-50 system-monitor">
          <div class="text-xs text-gray-500 mb-1">THROUGHPUT</div>
          <div class="text-2xl font-bold text-blue-600 mb-1">45.2k</div>
          <div class="text-xs text-gray-600 font-mono mb-2">req/sec</div>
          <!-- Mini line graph -->
          <svg width="100%" height="30" class="border-t border-gray-300">
            <polyline 
              fill="none" 
              stroke="#3b82f6" 
              stroke-width="2" 
              points="0,20 10,18 20,22 30,19 40,25 50,23 60,20 70,24 80,22 90,26 100,24"
            />
          </svg>
        </div>

        <!-- Error Rate -->
        <div class="technical-border p-4 bg-gray-50 system-monitor">
          <div class="text-xs text-gray-500 mb-1">ERROR_RATE</div>
          <div class="text-2xl font-bold text-green-600 mb-1">0.02%</div>
          <div class="text-xs text-gray-600 font-mono mb-2">Target: &lt;0.1%</div>
          <!-- Mini line graph -->
          <svg width="100%" height="30" class="border-t border-gray-300">
            <polyline 
              fill="none" 
              stroke="#10b981" 
              stroke-width="2" 
              points="0,28 10,27 20,28 30,26 40,28 50,27 60,28 70,26 80,28 90,27 100,28"
            />
          </svg>
        </div>

        <!-- Uptime -->
        <div class="technical-border p-4 bg-gray-50 system-monitor">
          <div class="text-xs text-gray-500 mb-1">UPTIME</div>
          <div class="text-2xl font-bold text-green-600 mb-1 status-flicker">99.98%</div>
          <div class="text-xs text-gray-600 font-mono mb-2">30-day average</div>
          <!-- Mini line graph -->
          <svg width="100%" height="30" class="border-t border-gray-300">
            <polyline 
              fill="none" 
              stroke="#10b981" 
              stroke-width="2" 
              points="0,2 10,2 20,2 30,2 40,2 50,2 60,2 70,2 80,2 90,2 100,2"
            />
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Learning Progress -->
  <section class="mb-8">
    <div class="technical-border corner-marks p-6 bg-white">
      <h2 class="text-xl font-bold text-gray-900 mb-6">CONTINUOUS_LEARNING_PROGRESS</h2>
      
      <div class="space-y-4">
        <!-- Current Learning -->
        <div class="technical-border p-4 bg-blue-50">
          <h3 class="font-bold text-gray-900 mb-3">CURRENT_FOCUS</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <div class="text-sm font-mono text-gray-700 mb-2">Advanced Node.js Patterns</div>
              <div class="progress-bar h-3 technical-border" style="--progress: 65%;">
                <div class="h-full bg-green-500 transition-all duration-1000 ease-out" style="width: 65%;"></div>
              </div>
              <div class="text-xs text-gray-500 mt-1">Microservices & scaling</div>
            </div>
            <div>
              <div class="text-sm font-mono text-gray-700 mb-2">System Design</div>
              <div class="progress-bar h-3 technical-border" style="--progress: 45%;">
                <div class="h-full bg-blue-500 transition-all duration-1000 ease-out" style="width: 45%;"></div>
              </div>
              <div class="text-xs text-gray-500 mt-1">Architecture patterns</div>
            </div>
          </div>
        </div>

        <!-- Recent Achievements -->
        <div class="technical-border p-4 bg-green-50">
          <h3 class="font-bold text-gray-900 mb-3">RECENT_ACHIEVEMENTS</h3>
          <div class="space-y-2 text-sm font-mono">
            <div class="flex justify-between">
              <span>✓ Notification System at Rbuy</span>
              <span class="text-gray-500">2024.01.20</span>
            </div>
            <div class="flex justify-between">
              <span>✓ Flutter Mobile App Development</span>
              <span class="text-gray-500">2024.01.15</span>
            </div>
            <div class="flex justify-between">
              <span>✓ Express.js API Architecture</span>
              <span class="text-gray-500">2024.01.10</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- System Status Footer -->
  <footer class="technical-border corner-marks p-4 bg-gray-100">
    <div class="flex justify-between items-center text-xs font-mono text-gray-600">
      <div>SYSTEM_STATUS: All systems operational</div>
      <div>NEXT_UPDATE: Auto (5min)</div>
      <div>MONITORING: 24/7 Active</div>
    </div>
  </footer>
</Layout>